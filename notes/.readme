userSchema.pre("save",async function (next) {
    const user = this;
    if(!user.isModified("password")){
        next();
    }

    try {
        const saltRound =await bcrypt.genSalt(10)
        const hash_password = await bcrypt.hash(user.password, saltRound);
        user.password=hash_password;

    } catch (error) {
        next(error)
    }
})

